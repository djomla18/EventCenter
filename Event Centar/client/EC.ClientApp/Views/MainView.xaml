<Window x:Name="SearchView" x:Class="EC.ClientApp.Views.MainView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EC.ClientApp.Views"
        mc:Ignorable="d"
        Height="1080" 
        Width="1920"
        WindowState="Maximized"
        WindowStyle="None"
        Background="#F5F5DC">
    <Grid x:Name="GlavniGrid" 
          MouseDown="GlavniGrid_MouseDown"
          Background="Transparent"
          Focusable="True">
        <Grid.RowDefinitions>
            <RowDefinition Height="209"/> <!-- search bar-->
            <RowDefinition Height="*"/> <!-- rezultati pretrage -->
            <RowDefinition Height="350"/> <!-- tastatura -->
            <RowDefinition Height="0"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0"
                Padding="40"
                Margin="20,10,20,0"
                CornerRadius="20"
                Background="#FDFBF7">
            
            <StackPanel>
                <TextBlock Text="Unesite vaše ime: "
                       FontFamily="/Assets/Fonts/#Playfair Display"
                       FontSize="30"/>
                
                <TextBox x:Name="SearchBox"
                         FontSize="36"
                         Padding="15"
                         Height="81"
                         BorderBrush="#D4CFC0"
                         BorderThickness="2"
                         Background="White"
                         TextChanged="SearchBox_TextChanged"
                         PreviewMouseDown="SearchBox_PreviewMouseDown"
                         GotFocus="SearchBox_GotFocus">

                    <TextBox.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="8"/>
                        </Style>
                    </TextBox.Resources>
                    
                    
                </TextBox>
    
            </StackPanel>
        </Border>

        <Border x:Name="ResultBorder"
                Grid.Row="1"
                Margin="20,10,20,0"
                Background="#FDFBF7"
                CornerRadius="20">
            <Border.Effect>
                <DropShadowEffect Color="#000000" 
                          Opacity="0.08" 
                          BlurRadius="20" 
                          ShadowDepth="0"/>
            </Border.Effect>
            <ListBox x:Name="RezultatiPretrage"
                     Background="Transparent"
                     BorderThickness="0"
                     Padding="20"
                     ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                
                <ListBox.ItemContainerStyle>
                    <Style TargetType="ListBoxItem">
                        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="ListBoxItem">
                                    <ContentPresenter/>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </ListBox.ItemContainerStyle>
                
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Border
                            Padding="15,10"
                            Margin="0,5"
                            Background="LightGoldenrodYellow"
                            CornerRadius="8"
                            BorderBrush="#E0E0E0"
                            BorderThickness="1"
                            >

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Column="0"
                                       Text="{Binding KompletnoImePrezimeGosta}"
                                       FontSize="26"
                                       FontFamily="/Assets/Fonts/#Playfair Display"
                                       Foreground="Black"
                                       VerticalAlignment="Center"
                                       Margin="0,0,20,0"
                                       TextWrapping="Wrap"/>

                                <CheckBox x:Name="GostCB"
                                          Grid.Column="1"
                                          IsChecked="{Binding PokupioRezervaciju, Mode=TwoWay}"
                                          VerticalAlignment="Center"
                                          VerticalContentAlignment="Center"
                                          Margin="0"
                                          Padding="0"
                                          Width="30"
                                          Height="30"
                                          Checked="GostCheckBox_Checked"
                                          Unchecked="GostCheckBox_Unchecked">
                                    <CheckBox.LayoutTransform>
                                        <ScaleTransform ScaleX="1.8" ScaleY="1.8"/>
                                    </CheckBox.LayoutTransform>
                                </CheckBox>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
            
        </Border>

        <Border x:Name="BorderTastature"
                Grid.Row="2"
                Background="#D4CFC0"
                Margin="20,10,20,20"
                CornerRadius="20">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <!-- Row 1 -->
                    <RowDefinition Height="*"/>
                    <!-- Row 2 -->
                    <RowDefinition Height="*"/>
                    <!-- Row 3 -->
                    <RowDefinition Height="*"/>
                    <!-- Row 4: Special keys -->
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0" 
                            Orientation="Horizontal" 
                            HorizontalAlignment="Center"
                            Margin="0,5">

                    <!-- Define a reusable button style -->
                    <StackPanel.Resources>
                        <Style x:Key="KeyButton" TargetType="Button">
                            <Setter Property="Width" Value="90"/>
                            <Setter Property="Height" Value="70"/>
                            <Setter Property="Margin" Value="0,1,15,0"/>
                            <Setter Property="FontSize" Value="24"/>
                            <Setter Property="FontWeight" Value="SemiBold"/>
                            <Setter Property="Background" Value="White"/>
                            <Setter Property="Foreground" Value="#4A4A4A"/>
                            <Setter Property="BorderThickness" Value="0"/>
                            <Setter Property="Cursor" Value="Hand"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                CornerRadius="8"
                                                BorderThickness="0">
                                            <ContentPresenter HorizontalAlignment="Center"
                                            VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </StackPanel.Resources>

                    <!-- Individual key buttons -->
                    <Button Content="Q" Style="{StaticResource KeyButton}" Click="KeyButton_Click"/>
                    <Button Content="W" Style="{StaticResource KeyButton}" Click="KeyButton_Click"/>
                    <Button Content="E" Style="{StaticResource KeyButton}" Click="KeyButton_Click"/>
                    <Button Content="R" Style="{StaticResource KeyButton}" Click="KeyButton_Click"/>
                    <Button Content="T" Style="{StaticResource KeyButton}" Click="KeyButton_Click"/>
                    <Button Content="Z" Style="{StaticResource KeyButton}" Click="KeyButton_Click"/>
                    <Button Content="U" Style="{StaticResource KeyButton}" Click="KeyButton_Click"/>
                    <Button Content="I" Style="{StaticResource KeyButton}" Click="KeyButton_Click"/>
                    <Button Content="O" Style="{StaticResource KeyButton}" Click="KeyButton_Click"/>
                    <Button Content="P" Style="{StaticResource KeyButton}" Click="KeyButton_Click"/>
                    <Button Content="Š" Style="{StaticResource KeyButton}" Click="KeyButton_Click"/>
                    <Button Content="Đ" Style="{StaticResource KeyButton}" Click="KeyButton_Click"/>
                    <Button Content="⌫" 
                             Width="90" 
                             Height="70"
                             Margin="0,1,15,0"
                             FontSize="28"
                             FontWeight="Bold"
                             Background="#FF6B6B"
                             Foreground="White"
                             BorderThickness="0"
                             Cursor="Hand"
                             Click="BackspaceButton_Click">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="8"/>
                            </Style>
                        </Button.Resources>
                    </Button>
                </StackPanel>

                <StackPanel Grid.Row="1" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Center"
                    Margin="0,5">

                    <StackPanel.Resources>
                        <Style x:Key="KeyButton" TargetType="Button">
                            <Setter Property="Width" Value="90"/>
                            <Setter Property="Height" Value="70"/>
                            <Setter Property="Margin" Value="0,1,15,0"/>
                            <Setter Property="FontSize" Value="24"/>
                            <Setter Property="FontWeight" Value="SemiBold"/>
                            <Setter Property="Background" Value="White"/>
                            <Setter Property="Foreground" Value="#4A4A4A"/>
                            <Setter Property="BorderThickness" Value="0"/>
                            <Setter Property="Cursor" Value="Hand"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                CornerRadius="8"
                                                BorderThickness="0">            
                                            <ContentPresenter HorizontalAlignment="Center"
                                                              VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </StackPanel.Resources>

                    <Button Content="A" Style="{StaticResource KeyButton}" Click="KeyButton_Click"/>
                    <Button Content="S" Style="{StaticResource KeyButton}" Click="KeyButton_Click"/>
                    <Button Content="D" Style="{StaticResource KeyButton}" Click="KeyButton_Click"/>
                    <Button Content="F" Style="{StaticResource KeyButton}" Click="KeyButton_Click"/>
                    <Button Content="G" Style="{StaticResource KeyButton}" Click="KeyButton_Click"/>
                    <Button Content="H" Style="{StaticResource KeyButton}" Click="KeyButton_Click"/>
                    <Button Content="J" Style="{StaticResource KeyButton}" Click="KeyButton_Click"/>
                    <Button Content="K" Style="{StaticResource KeyButton}" Click="KeyButton_Click"/>
                    <Button Content="L" Style="{StaticResource KeyButton}" Click="KeyButton_Click"/>
                    <Button Content="Č" Style="{StaticResource KeyButton}" Click="KeyButton_Click"/>
                    <Button Content="Ć" Style="{StaticResource KeyButton}" Click="KeyButton_Click"/>
                    <Button Content="Ž" Style="{StaticResource KeyButton}" Click="KeyButton_Click"/>
                </StackPanel>

                <StackPanel Grid.Row="2" 
                            Orientation="Horizontal" 
                            HorizontalAlignment="Center"
                            Margin="0,5">   

                    <StackPanel.Resources>
                        <Style x:Key="KeyButton" TargetType="Button">
                            <Setter Property="Width" Value="90"/>
                            <Setter Property="Height" Value="70"/>
                            <Setter Property="Margin" Value="0,1,12,0"/>
                            <Setter Property="FontSize" Value="24"/>
                            <Setter Property="FontWeight" Value="SemiBold"/>
                            <Setter Property="Background" Value="White"/>
                            <Setter Property="Foreground" Value="#4A4A4A"/>
                            <Setter Property="BorderThickness" Value="0"/>
                            <Setter Property="Cursor" Value="Hand"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="8"
                                BorderThickness="0">
                                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </StackPanel.Resources>

                    <Button Content="Y" Style="{StaticResource KeyButton}" Click="KeyButton_Click"/>
                    <Button Content="X" Style="{StaticResource KeyButton}" Click="KeyButton_Click"/>
                    <Button Content="C" Style="{StaticResource KeyButton}" Click="KeyButton_Click"/>
                    <Button Content="V" Style="{StaticResource KeyButton}" Click="KeyButton_Click"/>
                    <Button Content="B" Style="{StaticResource KeyButton}" Click="KeyButton_Click"/>
                    <Button Content="N" Style="{StaticResource KeyButton}" Click="KeyButton_Click"/>
                    <Button Content="M" Style="{StaticResource KeyButton}" Click="KeyButton_Click"/>

                </StackPanel>

                <!-- ROW 4: Special keys -->
                <StackPanel Grid.Row="3" 
                            Orientation="Horizontal" 
                            HorizontalAlignment="Center"
                            Margin="0,5">
                    <Button   x:Name="CapsLockBtn"
                              Content="⬆️" 
                              Width="95" 
                              Height="70" 
                              Margin="2,0,10,0"
                              HorizontalContentAlignment="Center"
                              VerticalContentAlignment="Top"
                              FontSize="47"
                              FontWeight="SemiBold"
                              Background="#4CAF50"
                              Foreground="White"
                              BorderThickness="0"
                              Cursor="Hand"
                              Click="CapsLockButton_Click"> 
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="8"/>
                            </Style>
                        </Button.Resources>
                    </Button>

                    <Button Content="SPACE" 
                            Width="500" 
                            Height="70" 
                            FontSize="24"
                            FontWeight="SemiBold"
                            Background="White"
                            Foreground="#4A4A4A"
                            BorderThickness="0"
                            Cursor="Hand"
                            Click="SpaceButton_Click">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="8"/>
                            </Style>
                        </Button.Resources>
                    </Button>
                    <!-- Clear -->
                    <Button Content="CLEAR" 
                            Width="95" 
                            Height="70" 
                            Margin="10,0,10,0"
                            FontSize="20"
                            FontWeight="SemiBold"
                            Background="#FFB74D"
                            Foreground="White"
                            BorderThickness="0"
                            Cursor="Hand"
                            Click="ClearButton_Click">  
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="8"/>
                            </Style>
                        </Button.Resources>
                    </Button>

                    <!-- Caps Lock toggle -->

                </StackPanel>

               

            </Grid>
        </Border>

        <Border x:Name="BorderMape"
                Grid.Row="3"
                Background="#FDFBF7"
                Margin="20,10,20,20"
                CornerRadius="20"
                Visibility="Collapsed">    
            <Border.Effect>
                <DropShadowEffect Color="#000000" 
                                   Opacity="0.08" 
                                   BlurRadius="20" 
                                   ShadowDepth="0"/>
            </Border.Effect>
            <Grid>

                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="100"/>
                </Grid.RowDefinitions>
                
                
                <!-- Map content will go here -->
                <Canvas 
                        x:Name="MapaCanvas" 
                        Grid.Row="0"
                        Background="#FDFBF7"
                        Margin="200,20,20,20">
                        <!-- Tables and chairs will be drawn here programmatically -->
                </Canvas>

                <ItemsControl x:Name="DobrodosliPoruka"
                              Grid.Row="1"
                              Margin="40,10,40,10">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <TextBlock FontFamily="/Assets/Fonts/#Playfair Display"
                               FontSize="20"
                               FontWeight="SemiBold"
                               Foreground="#1E3A5F"
                               TextAlignment="Center"
                               TextWrapping="Wrap"
                               Margin="0,5"
                               Text="{Binding}"/>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <!-- Potvrdi button -->
                    <Button
                        x:Name="PotvrdiBtn"
                        Grid.Row="2"
                        Content="POTVRDI"
                        Width="250"
                        Height="70"
                        FontFamily="/Assets/Fonts/#Playfair Display"
                        FontSize="28"
                        FontWeight="SemiBold"
                        Background="#1E3A5F"
                        Foreground="White"
                        BorderThickness="0"
                        Cursor="Hand"
                        Margin="0,10,0,20"
                        Click="ButtonPotvrdi_Click">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="10"/>
                            </Style>
                        </Button.Resources>
                    </Button>
            </Grid>
        </Border>
    </Grid>
</Window>
